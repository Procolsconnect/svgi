{
  "info": {
    "_postman_id": "b6f8f8c8-0000-4e2a-9f3b-123456789abc",
    "name": "SVGI Campus API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection with example requests for campus endpoints (overview, sports, hostel). Change `{{baseUrl}}` variable to your server URL."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Overview Hero",
      "item": [
        {
          "name": "Create Overview Hero (multipart)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Main Campus", "type": "text" },
                { "key": "image", "type": "file", "src": "" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/api/campus/overviewhero", "host": ["{{baseUrl}}"], "path": ["api","campus","overviewhero"] }
          }
        },
        {
          "name": "Get Overview Heroes",
          "request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/api/campus/overviewhero", "host": ["{{baseUrl}}"], "path": ["api","campus","overviewhero"] } }
        }
      ]
    },
    {
      "name": "Sports Hero",
      "item": [
        {
          "name": "Create Sports Hero (multipart)",
          "request": {
            "method": "POST",
            "body": { "mode": "formdata", "formdata": [ { "key": "title", "value": "Sports Day", "type": "text" }, { "key": "image", "type": "file", "src": "" } ] },
