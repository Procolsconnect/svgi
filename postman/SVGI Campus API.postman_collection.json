            "method": "POST",
            "body": { "mode": "formdata", "formdata": [ { "key": "title", "value": "Team A", "type": "text" }, { "key": "description", "value": "Description here", "type": "text" }, { "key": "image", "type": "file", "src": "" } ] },
            "url": { "raw": "{{baseUrl}}/api/campus/sportscard", "host": ["{{baseUrl}}"], "path": ["api","campus","sportscard"] }
